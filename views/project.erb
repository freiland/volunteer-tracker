<h1> Make changes to project: <%= @project.title() %> </h1>

<h3>Rename this project in the form below </h3>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">    

  <label for="title">new project title: </label>
  <input id="title" name="title" type="text">

  <button type="submit">Update</button>
</form><br>



<form action="/projects/<%= @project.id()%>" method="post">
     

  <label for="volunteer_name">add a volunteer to this project: </label>
  <input id="volunteer_name" name="volunteer_name" type="text">

  <button type="submit">add</button>
</form>

<h3> volunteer list: </h3>

<% if @project.volunteers %>
    <ul>
      <% @project.volunteers.each do |volunteer| %>
        <li><a href="/projects/<%= @project.id %>/<%= volunteer.id %>"><%= volunteer.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no volunteers listed for this project yet</p>
  <% end %>



<br><br><br><form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">delete this project</button>
</form><br>

<p><a href="/">Return to project list</a></p>