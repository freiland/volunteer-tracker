<h2> edit volunteer information for: <%=@volunteer.name %> </h2>

<form action="/projects/<%= @volunteer.project.id %>/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">update volunteer</label>
  <input id="name" name="name" type="text">

  <button type="submit">submit changes</button>
</form><br><br>

<form action="/projects/<%= @volunteer.project.id %>/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">delete volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project.id %>">Back</a>